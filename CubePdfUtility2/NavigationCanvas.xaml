<Canvas x:Class="CubePdfUtility.NavigationCanvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:r="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
        xmlns:cube="clr-namespace:CubePdf.Wpf;assembly=CubePdf.Wpf"
        xmlns:local="clr-namespace:CubePdfUtility"
        Height="300" Width="550">
    
    <Canvas.Resources>
        <cube:ControlToTagConverter x:Key="ControlToTagConverter"/>
    </Canvas.Resources>

    <Rectangle Height="300" Width="550" Canvas.Left="0" Canvas.Top="0">
        <Rectangle.Fill>
            <SolidColorBrush Color="White" />
        </Rectangle.Fill>
    </Rectangle>

    <Image x:Name="NavigationHeader" Source="Images\NavigationHeader.png" Canvas.Left="0" Canvas.Top="0" Height="90" Width="550" />

    <r:RibbonGallery Canvas.Left="0" Canvas.Top="90" Height="210" Width="550"
                     Command="Open"
                     CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=SelectedItem, Converter={StaticResource ControlToTagConverter}}" >
        <r:RibbonGalleryCategory x:Name="RecentFilesGallery" />
    </r:RibbonGallery>
</Canvas>
