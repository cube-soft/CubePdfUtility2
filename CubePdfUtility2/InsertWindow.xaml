<Window x:Class="CubePdfUtility.InsertWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="詳細を設定して挿入" Height="350" Width="600" Icon="/CubePdfUtility;component/app.ico"
    WindowStartupLocation="CenterOwner" WindowStyle="SingleBorderWindow">
    <Window.CommandBindings>
        <CommandBinding Command="Save"   CanExecute="SaveCommand_CanExecute"   Executed="SaveCommand_Executed"/>
        <CommandBinding Command="Close"  CanExecute="CloseCommand_CanExecute"  Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="挿入位置" Margin="12,12,12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <RadioButton Grid.Column="0" GroupName="insert-mode" Margin="5" IsChecked="True" FontSize="12">先頭</RadioButton>
                <RadioButton Grid.Column="1" GroupName="insert-mode" Margin="5" FontSize="12">末尾</RadioButton>
                <RadioButton Grid.Column="2" GroupName="insert-mode" Margin="5" FontSize="12">選択位置の後ろ</RadioButton>
                <RadioButton Grid.Column="3" GroupName="insert-mode" Margin="5" FontSize="12">ページを指定</RadioButton>
                <TextBox Grid.Column="4" Background="LightGray" Margin="10,0,10,0" IsEnabled="False" Width="20"></TextBox>
                <TextBlock Grid.Column="5" Margin="5">/ 99ページ</TextBlock>
            </Grid>
        </GroupBox>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <ListView x:Name="FileListView" Margin="12,6,6,12">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ファイル名" />
                            <GridViewColumn Header="ページ数" />
                            <GridViewColumn Header="サイズ" />
                            <GridViewColumn Header="更新日時" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Content="ファイルを追加" Margin="6,6,12,3" />
                <Button Grid.Row="1" Content="上へ" Margin="6,3,12,3" />
                <Button Grid.Row="2" Content="下へ" Margin="6,3,12,3" />
                <Button Grid.Row="3" Content="削除" Margin="6,3,12,3" />
                <Button Grid.Row="4" Content="全て削除" Margin="6,3,12,6" />
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Background="{x:Static SystemColors.ControlBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Content="OK" IsDefault="True" Width="100" Margin="12,12,6,12" Command="Save"/>
            <Button Grid.Column="2" Content="キャンセル" IsCancel="True" Width="100" Margin="6,12,12,12" Command="Close"/>
        </Grid>
    </Grid>
</Window>
