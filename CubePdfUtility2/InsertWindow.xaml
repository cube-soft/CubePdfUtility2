<Window x:Class="CubePdfUtility.InsertWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="詳細を設定して挿入" Height="400" Width="500" Icon="/CubePdfUtility;component/app.ico"
    WindowStartupLocation="CenterOwner" WindowStyle="SingleBorderWindow">
    <Window.CommandBindings>
        <CommandBinding Command="Save"   CanExecute="SaveCommand_CanExecute"   Executed="SaveCommand_Executed"/>
        <CommandBinding Command="Close"  CanExecute="CloseCommand_CanExecute"  Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="1" Header="挿入位置" Margin="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <RadioButton Grid.Column="0" GroupName="insert-mode" Margin="5" IsChecked="True" FontSize="12">先頭</RadioButton>
                <RadioButton Grid.Column="1" GroupName="insert-mode" Margin="5" FontSize="12">末尾</RadioButton>
                <RadioButton Grid.Column="2" GroupName="insert-mode" Margin="5" FontSize="12">選択位置の後ろ</RadioButton>
                <RadioButton Grid.Column="3" GroupName="insert-mode" Margin="5" FontSize="12">ページを指定</RadioButton>
                <TextBox Grid.Column="4" Background="LightGray" Margin="10,0,10,0" IsEnabled="False" Width="20"></TextBox>
                <TextBlock Grid.Column="5" Margin="5">/ 99ページ</TextBlock>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <StackPanel>
                    <FlowDocumentReader>
                        <FlowDocument>
                            <Table CellSpacing="5" AllowDrop="True">
                                <Table.Columns>
                                    <TableColumn Width="Auto"></TableColumn>
                                    <TableColumn Width="Auto"></TableColumn>
                                    <TableColumn Width="Auto"></TableColumn>
                                    <TableColumn Width="Auto"></TableColumn>
                                </Table.Columns>
                                <TableRowGroup>
                                    <!--header-->
                                    <TableRow Background="Azure">
                                        <TableCell>
                                            <Paragraph FontFamily="Meiryo">ファイル名</Paragraph>
                                        </TableCell>
                                        <TableCell>
                                            <Paragraph FontFamily="Meiryo">ページ数</Paragraph>
                                        </TableCell>
                                        <TableCell>
                                            <Paragraph FontFamily="Meiryo">サイズ</Paragraph>
                                        </TableCell>
                                        <TableCell>
                                            <Paragraph FontFamily="Meiryo">更新日時</Paragraph>
                                        </TableCell>
                                    </TableRow>
                                    <!--見た目確認用-->
                                    <TableRow>
                                        <TableCell>
                                            <Paragraph>aaa.pdf</Paragraph>
                                        </TableCell>
                                        <TableCell>
                                            <Paragraph>12</Paragraph>
                                        </TableCell>
                                        <TableCell>
                                            <Paragraph>12,345</Paragraph>
                                        </TableCell>
                                        <TableCell>
                                            <Paragraph>2013/10/16</Paragraph>
                                        </TableCell>
                                    </TableRow>
                                    <!--見た目確認用ここまで-->
                                </TableRowGroup>
                            </Table>
                        </FlowDocument>
                    </FlowDocumentReader>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1" Background="Beige">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Content="ファイルを追加" Margin="6"></Button>
                <Button Grid.Row="1" Content="上へ" Margin="6"></Button>
                <Button Grid.Row="2" Content="下へ" Margin="6"></Button>
                <Button Grid.Row="3" Content="削除" Margin="6"></Button>
                <Button Grid.Row="4" Content="全て削除" Margin="6"></Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="3" Background="{x:Static SystemColors.ControlBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Content="OK" IsDefault="True" Width="100" Margin="12,12,6,12" Command="Save"/>
            <Button Grid.Column="2" Content="キャンセル" IsCancel="True" Width="100" Margin="6,12,12,12" Command="Close"/>
        </Grid>
    </Grid>
</Window>
